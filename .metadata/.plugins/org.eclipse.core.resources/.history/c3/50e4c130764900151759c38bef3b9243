package trb1914.data;

import java.util.ArrayList;
import java.util.concurrent.Callable;
import java.util.concurrent.ExecutorService;
import java.util.concurrent.Executors;

/**
 * This class calculates the statistics based on a snapshot of the rentals file
 * @author Mees Gelein
 */
public abstract class StatisticsCalculator {
	
	//the service we submit our tasks to
	private static ExecutorService service = Executors.newSingleThreadExecutor();
	/*
	 * Useful statistics:
	 * for every date the number of rented items
	 * for every date the number of returned items
	 * for every item the number of days it was rented
	 */
	
	/**
	 * Calculates the statistics
	 */
	public static Statistics calculate(){
		return service.submit(new );
	}
	
	/**
	 * The class that does the actual calculating
	 * @author Mees Gelein
	 */
	private class Calculator implements Callable<Statistics>{

		///Local copy of the list of rentals
		private ArrayList<Rental> rentals;
		/**
		 * Constructor for the calculator
		 * @param list
		 */
		public Calculator(ArrayList<Rental> list) {
			
		}
		
		public Statistics call() throws Exception {
			Statistics stats = new Statistics();
			return stats;
		}
		
	}
}
